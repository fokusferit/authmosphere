{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./lib",
    "lib": ["es2015", "dom", "es2017"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // Intentionally false
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "integration-test/**/*"
  ]
}
